<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/detail"
    >

    <LinearLayout
        android:id="@+id/lin_header"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#695853"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/mv"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/song_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:textColor="#fff"
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:id="@+id/song_singer"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="#bababc"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:layout_marginBottom="3dp"
                />
        </LinearLayout>
    </LinearLayout>


    <ImageView
        android:id="@+id/isdown"
        android:layout_width="30dp"
        android:layout_height="22dp"
        android:background="@mipmap/a06"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="130dp"
        android:layout_marginLeft="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <TextView
                android:id="@+id/song_time"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:textColor="#fff"
                android:text="00:00"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                />
            <SeekBar
                android:id="@+id/seekbar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/song_duration"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:textColor="#fff"
                android:text="00:00"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:layout_marginRight="15dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <ImageButton
                android:id="@+id/last_music"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/lastmusic"
                />
            <CheckBox
                android:id="@+id/song_pause"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:button="@null"
                android:background="@drawable/playmusic"
                />
            <ImageButton
                android:id="@+id/next_music"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/nextmusic"
                />
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/album"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:visibility="gone"
        />

</RelativeLayout>